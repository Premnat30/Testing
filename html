<body>
    <div class="container">
        <div class="header">
            <div class="header-top">
                <h1>
                    <i class="fas fa-monitor"></i>
                    Log & Process Monitor
                </h1>
                <div class="user-info">
                    <span>Welcome, {{ username }}</span>
                    <a href="{{ url_for('logout') }}" class="logout-btn">
                        <i class="fas fa-sign-out-alt"></i>
                        Logout
                    </a>
                </div>
            </div>

            <div class="environment-menu">
                {% set environment_groups = {
                    'Environment 1': ['200', '201'],
                    'Environment 2': ['202', '204']
                } %}
                
                {% for env_name, env_hosts in environment_groups.items() %}
                    {% set show_environment = false %}
                    {% for host in env_hosts %}
                        {% if host in hosts %}
                            {% set show_environment = true %}
                        {% endif %}
                    {% endfor %}
                    
                    {% if show_environment %}
                    <div class="environment-group">
                        <div class="environment-title">{{ env_name }}</div>
                        <div class="host-grid">
                            {% for host_key in env_hosts %}
                                {% if host_key in hosts %}
                                <div class="host-card">
                                    <div class="host-header">
                                        <i class="fas fa-server"></i>
                                        Host {{ host_key }}
                                    </div>
                                    <div class="host-actions">
                                        <a href="{{ url_for('index', hostname=host_key) }}" 
                                           class="action-btn logs {% if host_key == selected_host %}active{% endif %}">
                                            <i class="fas fa-file-lines"></i>
                                            Logs
                                        </a>
                                        <a href="{{ url_for('process_task', hostname_key=host_key) }}" 
                                           class="action-btn processes">
                                            <i class="fas fa-microchip"></i>
                                            Processes
                                        </a>
                                    </div>
                                </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}

                {% set other_hosts = [] %}
                {% for host_key in hosts %}
                    {% if host_key not in ['200', '201', '202', '204'] %}
                        {% set _ = other_hosts.append(host_key) %}
                    {% endif %}
                {% endfor %}
                
                {% if other_hosts %}
                <div class="environment-group">
                    <div class="environment-title">Other Environments</div>
                    <div class="host-grid">
                        {% for host_key in other_hosts %}
                        <div class="host-card">
                            <div class="host-header">
                                <i class="fas fa-server"></i>
                                Host {{ host_key }}
                            </div>
                            <div class="host-actions">
                                <a href="{{ url_for('index', hostname=host_key) }}" 
                                   class="action-btn logs {% if host_key == selected_host %}active{% endif %}">
                                    <i class="fas fa-file-lines"></i>
                                    Logs
                                </a>
                                <a href="{{ url_for('process_task', hostname_key=host_key) }}" 
                                   class="action-btn processes">
                                    <i class="fas fa-microchip"></i>
                                    Processes
                                </a>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
            </div>
        </div>


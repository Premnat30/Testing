            <h1>
                <i class="fas fa-search"></i>
                Search Results
            </h1>
            
            <div class="search-info">
                <p>
                    <i class="fas fa-file-lines"></i>
                    <strong>File:</strong> {{ selected_log }}
                </p>
                <p>
                    <i class="fas fa-magnifying-glass"></i>
                    <strong>Search Query:</strong> "{{ query }}"
                </p>
                {% if results %}
                <div class="results-count">
                    <i class="fas fa-check-circle"></i>
                    {{ results|length }} matching line{{ 's' if results|length != 1 }}
                </div>
                {% endif %}
            </div>

            <a href="/?hostname={{ selected_host }}" class="back-btn">
                <i class="fas fa-arrow-left"></i>
                Back to File List
            </a>
        </div>

        {% if results %}
        <div class="results-container">
            <div class="results-header">
                <h2>
                    <i class="fas fa-list"></i>
                    Matching Log Entries
                </h2>
            </div>
            <div class="results-content">
                {% for line in results %}
                <div class="log-entry">
                    {{ line | replace('ERROR', '<span class="error-highlight">ERROR</span>') | 
                          replace('WARNING', '<span class="warning-highlight">WARNING</span>') | 
                          replace('Warning', '<span class="warning-highlight">Warning</span>') | 
                          replace('INFO', '<span class="info-highlight">INFO</span>') | 
                          replace(query, '<span class="query-highlight">' ~ query ~ '</span>') | safe }}
                </div>
                {% endfor %}
            </div>
        </div>
        {% else %}
        <div class="empty-state">
            <i class="fas fa-inbox"></i>
            <h3>No Results Found</h3>
            <p>No matching log entries were found for your search query.</p>
            <p style="margin-top: 15px; font-size: 14px; color: #6c757d;">
                Try adjusting your search terms or check another log file.
            </p>
        </div>
        {% endif %}

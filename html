    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tailButton = document.getElementById('tail-button');
            const logFileSelect = document.getElementById('log_file_search');
            const hostnameKey = "{{ selected_host }}";
            const mainContent = document.getElementById('main-content');
            const noEnvironmentMessage = document.getElementById('no-environment-message');

            // Initialize - hide main content and show placeholder
            mainContent.classList.remove('active');
            noEnvironmentMessage.style.display = 'block';

            if (tailButton) {
                tailButton.addEventListener('click', function() {
                    const filename = logFileSelect.value;
                    if (filename) {
                        const url = `/tail/${hostnameKey}/${filename}`;
                        window.location.href = url;
                    } else {
                        alert('Please select a log file for live tail.');
                    }
                });
            }

            // Environment selection functionality
            const envOptions = document.querySelectorAll('.env-option');
            const envGroups = document.querySelectorAll('.environment-group');
            
            envOptions.forEach(option => {
                option.addEventListener('click', function() {
                    // Remove active class from all options
                    envOptions.forEach(opt => opt.classList.remove('active'));
                    
                    // Add active class to clicked option
                    this.classList.add('active');
                    
                    const selectedEnv = this.getAttribute('data-env');
                    
                    // Show/hide environment groups based on selection
                    envGroups.forEach(group => {
                        if (selectedEnv === 'all' || group.getAttribute('data-env') === selectedEnv) {
                            group.style.display = 'block';
                        } else {
                            group.style.display = 'none';
                        }
                    });
                    
                    // Show main content and hide placeholder
                    mainContent.classList.add('active');
                    noEnvironmentMessage.style.display = 'none';
                    
                    // Update hidden hostname field if a specific host is selected
                    updateSelectedHost();
                });
            });
            
            // Function to update the selected host in forms
            function updateSelectedHost() {
                const hostInputs = document.querySelectorAll('input[name="hostname"]');
                // This would need to be implemented based on your specific host selection logic
                // For now, we'll keep the default selected_host
            }
        });
    </script>

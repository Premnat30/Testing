    <header>
        <div class="header-top">
            <h1>Monitor Logs and Processes</h1>
            <div class="user-info">
                Welcome, {{ username }} 
                <a href="{{ url_for('logout') }}" class="logout-btn">Logout</a>
            </div>
        </div>

        <div class="environment-menu">
            <!-- Environment Groups will be dynamically generated based on host names -->
            {% set environment_groups = {
                'Environment 1': ['200', '201'],
                'Environment 2': ['202', '204']
            } %}
            
            {% for env_name, env_hosts in environment_groups.items() %}
                {% set show_environment = false %}
                {% for host in env_hosts %}
                    {% if host in hosts %}
                        {% set show_environment = true %}
                    {% endif %}
                {% endfor %}
                
                {% if show_environment %}
                <div class="environment-group">
                    <div class="environment-title">{{ env_name }}</div>
                    {% for host_key in env_hosts %}
                        {% if host_key in hosts %}
                        <div class="host-row">
                            <div class="host-name">Host {{ host_key }}</div>
                            <div class="action-buttons">
                                <a href="{{ url_for('index', hostname=host_key) }}" class="action-btn logs {% if host_key == selected_host %}active{% endif %}">
                                    View Logs
                                </a>
                                <a href="{{ url_for('process_task', hostname_key=host_key) }}" class="action-btn processes">
                                    View Processes
                                </a>
                            </div>
                        </div>
                        {% endif %}
                    {% endfor %}
                </div>
                {% endif %}
            {% endfor %}

            <!-- Fallback for any hosts not in predefined environments -->
            {% set other_hosts = [] %}
            {% for host_key in hosts %}
                {% if host_key not in ['200', '201', '202', '204'] %}
                    {% set _ = other_hosts.append(host_key) %}
                {% endif %}
            {% endfor %}
            
            {% if other_hosts %}
            <div class="environment-group">
                <div class="environment-title">Other Environments</div>
                {% for host_key in other_hosts %}
                <div class="host-row">
                    <div class="host-name">Host {{ host_key }}</div>
                    <div class="action-buttons">
                        <a href="{{ url_for('index', hostname=host_key) }}" class="action-btn logs {% if host_key == selected_host %}active{% endif %}">
                            View Logs
                        </a>
                        <a href="{{ url_for('process_task', hostname_key=host_key) }}" class="action-btn processes">
                            View Processes
                        </a>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </header>

    <main class="container">
        <h2>Logs for {{ selected_host }}</h2>

        <!-- The "Filter File List" section is now first -->
        <div class="card">
            <h3>Filter File List</h3>
            <form action="/" method="GET">
                <input type="hidden" name="hostname" value="{{ selected_host }}">
                <div class="form-group">
                    <label for="filename_filter">Filter Filename:</label>
                    <input type="text" name="filename_filter" id="filename_filter" value="{{ filename_filter }}" placeholder="e.g., 'dealhub'">
                </div>
                <button type="submit">Filter Files</button>
            </form>
        </div>

        <!-- The "Search and Filter" section is now second -->
        <div class="card">
            <h3>Search and Live Tail</h3>
            <form action="/search" method="GET">
                <input type="hidden" name="hostname" value="{{ selected_host }}">
                
                <div class="form-group">
                    <label for="log_file_search">Select Log File:</label>
                    <select name="log_file" id="log_file_search">
                        {% for file in log_files %}
                            <option value="{{ file }}">{{ file }}</option>
                        {% else %}
                            <option value="">No files found. Try another filter.</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <label for="query">Search Query:</label>
                    <input type="text" name="query" id="query" placeholder="e.g., 'error'">
                </div>

                <div class="button-group">
                    <button type="submit">Search Logs</button>
                    <button type="button" id="tail-button">Start Live Tail</button>
                </div>
            </form>
        </div>
    </main>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tailButton = document.getElementById('tail-button');
            const logFileSelect = document.getElementById('log_file_search');
            const hostnameKey = "{{ selected_host }}";
    
            tailButton.addEventListener('click', function() {
                const filename = logFileSelect.value;
                if (filename) {
                    const url = `/tail/${hostnameKey}/${filename}`;
                    window.location.href = url;
                } else {
                    alert('Please select a log file for live tail.');
                }
            });
        });
    </script>
